
<div class="nested-fields">
  <div class="field form-row">
    <div class="form-group col-md-6">
      <%=f.label :name%>
      <%=f.select( :name, UsersCrud::SOCIAL_NETS.collect{|x| x[:name_net]},{  include_blank: true},{class:'form-control', id:'input_social'})%>
    </div>

    <div class="col-md-6">
    <%=f.label :url%>
    <div class="input-group">
      <%=f.text_field :url, class:'form-control', id:'input_url'%>
    </div>
    </div>

    <div class="actions">

      <%=link_to_remove_association 'Borrar', f%>

    </div>
        </div>
        </div>

<script type="application/javascript">
  var hashmap={}
<%UsersCrud::SOCIAL_NETS.each do |net|%>
  hashmap['<%=net[:name_net]%>']='<%=net[:url]%>'
  <%end%>

  $('#input_social').change(function () {
      social=$('#input_social').val()
      url_net=hashmap[social]
      console.log(url_net)
      $('#input_url').val(url_net).focus().attr('id', 'input_url_old')
      $(this).attr('id', 'input_social_old')//.attr('disabled', 'disabled')

  })

</script>